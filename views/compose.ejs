<%- include('partials/header') %> 
<h1>Compose</h1>
<form action="/compose" method="POST">

    <div class="mb-3" style="margin-top: 2rem;">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="postTitle">
      </div>
      
      <div class="mb-3" style="margin-top: 1rem;">
        <label for="exampleFormControlTextarea1" class="form-label">Post</label>
        <textarea class="form-control" name="postBody" id="exampleFormControlTextarea1" rows="3"></textarea> 
      </div>

        <button type="submit" name="button" class="btn btn-primary" style="margin-top: 2rem;">Publish</button>

</form>
